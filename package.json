{
    "name": "jazzsvelte",
    "private": false,
    "version": "0.1.0",
    "scripts": {
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write \"{components,pages,service,api-scripts}/**/*.{js,ts,svelte,d.ts}\"",
        "format:check": "prettier --check \"{components,pages,service,api-scripts}/**/*.{js,ts,svelte,d.ts}\"",
        "lint:fix": "lint --fix --ignore-path .gitignore .",

        "importCmp": "pnpx tsx ./scripts/importCmp",
        "importCmpDoc": "pnpx tsx ./scripts/importCmpDoc",
        "generateCmp": "pnpx tsx ./scripts/generateCmp",

        "build:lib": "NODE_ENV=production INPUT_DIR=components/lib/ OUTPUT_DIR=dist/ npm run build:package",
        "build:package": "npm run build:check && rollup -c && gulp build-resources && npm run build:api",
        "dev:link": "NPM_LINK=true NODE_ENV=production INPUT_DIR=components/lib/ OUTPUT_DIR=dist/ npm run build:package:dev",
        "dev:link:windows": "set NPM_LINK=true && set NODE_ENV=production&& set INPUT_DIR=components/lib/&& set OUTPUT_DIR=dist/&& npm run build:package:dev",
        "build:package:dev": "npm run build:check && rollup -c --watch && gulp build-resources && npm run build:api",
        "build:api": "npm run apiwebtypes && npm run apidoc",
        "build:check": "npm run lint && npm run format:check && npm run type:check && npm run security:check",
        "security:check": "npm audit --production --audit-level high",
        "type:check": "tsc -p ./api-scripts/tsconfig.json",
        "apidoc": "node ./api-scripts/build-apidoc.js",
        "apiwebtypes": "node ./api-scripts/build-webtypes.js"
    },
    "devDependencies": {
        "@fontsource/fira-mono": "^4.5.10",
        "@neoconfetti/svelte": "^1.0.0",
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.5",
        "@stackblitz/sdk": "1.9.0",
        "@sveltejs/adapter-auto": "^3.0.0",
        "@sveltejs/kit": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^3.0.0",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/svelte": "^5.1.0",
        "@types/eslint": "8.56.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.10.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.13.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.35.1",
        "gulp": "^4.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-flatten": "^0.4.0",
        "gulp-rename": "^2.0.0",
        "gulp-uglify": "^3.0.2",
        "gulp-uglifycss": "^1.1.0",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.35",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.1.2",
        "rollup": "^2.79.1",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.69.5",
        "svelte": "^4.2.7",
        "svelte-check": "^3.6.0",
        "tslib": "^2.4.1",
        "tsx": "^4.10.2",
        "typedoc": "0.24.8",
        "typescript": "5.1.6",
        "vite": "^5.0.3",
        "vitest": "^1.2.0"
    },
    "engines": {
        "node": ">=18.13"
    },
    "type": "module"
}
